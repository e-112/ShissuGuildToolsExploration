<!-- Shissu Guild Home: Kiosk/Bid Timer -->

<GuiXml>
	<Controls>	

 <TopLevelControl name="SGT_SharedRightBackgroundLef2t" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
      <Dimensions x="350" y="160" />
      <Anchor point="CENTER" offsetX="100" offsetY="100" />      
	</TopLevelControl>

 <TopLevelControl name="ShissuKioskTimer" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
      <Dimensions x="350" y="160" />
      <Anchor point="CENTER" offsetX="100" offsetY="100" />      

      <Controls>
  		  <Label name="$(parent)_Version" font="$(ANTIQUE_FONT)|12" wrapMode="ELLIPSIS" verticalAlignment="RIGHT" text="Shissu's Guild Tools">
  			  <Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-95" offsetY="-0" />
  		  </Label>

				<Label name="$(parent)_NextKiosk" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Neuer Händler in:">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)_Title" relativePoint="TOPLEFT" offsetX="10" offsetY="45" />
				</Label>
        <Label name="$(parent)_NextKioskCount" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="RIGHT" text="">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-150" offsetY="45" />
				</Label>

        <Label name="$(parent)_LastBid" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Gebots Ende:">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)_NextKiosk" relativePoint="TOPLEFT" offsetX="0" offsetY="30" />
				</Label>
        <Label name="$(parent)_LastBidCount" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="RIGHT" text="">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)_NextKioskCount" relativePoint="TOPLEFT" offsetX="0" offsetY="30" />
				</Label>

        <Label name="$(parent)_ReplacementBid" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Ersatzhändler ab:">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)_LastBid" relativePoint="TOPLEFT" offsetX="0" offsetY="30" />
				</Label>
        <Label name="$(parent)_ReplacementBidCount" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="">
				  <Anchor point="TOPLEFT" relativeTo="$(parent)_LastBidCount" relativePoint="TOPLEFT" offsetX="0" offsetY="30" />
				</Label>                                     
      </Controls>
    </TopLevelControl>
	</Controls>
</GuiXml>